@page
@model IACG.Pages.Apps.CreateModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "创建应用";
    ViewData["Id"] = "Apps";
}


<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="App.UserId" value="@UserManager.GetUserId(User)" />
            <div class="form-group">
                <label asp-for="App.Name" class="control-label"></label>
                <input asp-for="App.Name" class="form-control" />
                <span asp-validation-for="App.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="App.Description" class="control-label"></label>
                <textarea asp-for="App.Description" class="form-control" style="height: 500px"></textarea>
                <span asp-validation-for="App.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">回到列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
