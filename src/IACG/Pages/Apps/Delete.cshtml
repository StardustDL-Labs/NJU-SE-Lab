@page
@model IACG.Pages.Apps.DeleteModel

@{
    ViewData["Title"] = "删除应用";
    ViewData["Id"] = "Apps";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a asp-page="/Index">IACG</a></li>
    <li class="breadcrumb-item"><a asp-page="./Index">应用</a></li>
    <li class="breadcrumb-item">
        <a asp-page="./Details" asp-route-id="@Model.App.Id">
            @Html.DisplayFor(model => model.App.Name)
        </a>
    </li>
    <li class="breadcrumb-item active">@ViewData["Title"]</li>
</ul>

<h1>删除</h1>

<h3>您确定要删除吗？</h3>
<div>
    <h4>应用</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App.LastModifyTime)
        </dt>
        <dd class="col-sm-10">
            <timeoffset-display value="Model.App.LastModifyTime"></timeoffset-display>
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="App.Id" />
        <input type="submit" value="删除" class="btn btn-danger" /> |
        <a asp-page="./Index">回到列表</a>
    </form>
</div>
